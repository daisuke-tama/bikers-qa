<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-custom">
      <a class="navbar-brand" href="/">
        <img src="/assets/site-logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
        Bikers-qa
      </a>

      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "flash flash-#{key}") %>
      <% end %>

      <div class="navber-right">
        <% if user_signed_in? %>
          <%= link_to articles_path do %> 
            <button type="button" class="btn btn-outline-success">記事一覧</button>
          <% end %>
          <%= link_to new_article_path do %> 
            <button type="button" class="btn btn-outline-success">記事作成</button>
          <% end %>
          <%= link_to user_path(current_user.id) do %> 
            <button type="button" class="btn btn-outline-primary">会員情報</button>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete do %> 
            <button type="button" class="btn btn-outline-secondary">ログアウト</button>
          <% end %>
        <% else %>
          <%= link_to users_guest_sign_in_path, method: :post do %> 
            <button type="button" class="btn btn-outline-danger">テストログイン</button>
          <% end %>
          <%= link_to new_user_registration_path do %> 
            <button type="button" class="btn btn-outline-primary">会員登録</button>
          <% end %>
          <%= link_to new_user_session_path do %> 
            <button type="button" class="btn btn-outline-success">ログイン</button>
          <% end %>
        <% end %>
      </div>
    </nav>
  </header>
    <%= yield %>
  </body>
</html>
