<!-- users/show内のフォロー ON OFF機能(Ajax) -->
<% if user != current_user %>
  <% if user.followed_by?(current_user) %>
    <%= link_to user_relationships_path(user.id), method: :delete, remote: true do %>
      <button type="button" class="btn btn-outline-secondary follow-btn">フォロー解除</button>
    <% end %>
  <% else %>
    <%= link_to user_relationships_path(user.id), method: :post, remote: true do %>
      <button type="button" class="btn btn-outline-success follow-btn">フォローする</button>
    <% end %>
  <% end %>
<% end %>
