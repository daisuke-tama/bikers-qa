<!-- フォロー ON OFF機能(Ajax) -->
<% if user != current_user %>
  <% if user.followed_by?(current_user) %>
    <%= link_to user_relationships_path(user.id), method: :delete, remote: true do %>
      <button type="button" id="unfollow-btn" class="btn btn-outline-secondary btn-font">フォロー解除</button>
    <% end %>
  <% else %>
    <%= link_to user_relationships_path(user.id), method: :post, remote: true do %>
      <button type="button" id="follow-btn" class="btn btn-outline-success btn-font">フォローする</button>
    <% end %>
  <% end %>
<% end %>
