<div class="content-width contents-tidy">
  <!-- ユーザー新規登録入力フォーム -->
  <div class="form-user-registrations card mt-5 mb-80">
    <div class="card-body">
      <h3 class="mt-1 mb-3 text-center">新規会員登録</h3>
      <div><span style="color: red;">*</span>が付いている箇所は必須項目です</div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <!-- 画像アップロード -->
        <%= f.label :profile, class: "image_label form-user-profile" do %>
          <div class="prev-contents">
            <div class="prev-content">
              <%= image_pack_tag 'profile_defalt.png', class: "prev-image profile-image", alt: "preview" %>
              <p style="text-align: center;">プロフィール画像を変更したい場合はこちらをクリックしてください</p>
            </div>
          </div>
        <% end %>
        <%= f.file_field :profile, class: 'image_form__contents__field hidden_file_user_profile', style: "display: none;" %>

        <div class="form-group">
          <%= f.label :name, "名前を入力してください" %><span style="color: red;">*</span><br />
          <%= f.text_field :name, class: "form-control form-user-name", placeholder: "例） 二輪 太郎", autocomplete: "name" %>
        </div>

        <div class="form-group">
          <%= f.label :introduce, "自己紹介内容を入力してください" %><br />
          <%= f.text_area :introduce, class: "form-control", placeholder: "例） どうもはじめまして！よろしくおねがいします！", autocomplete: "introduce", rows: "10" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレスを入力してください" %><span style="color: red;">*</span><br />
          <%= f.email_field :email, class: "form-control form-user-email", placeholder: "例） bikers-qa@gmail.com", autocomplete: "email" %>
        </div>

        <div class="field mb-10">
          <%= f.label :password, "パスワードを入力してください" %><span style="color: red;">*</span><br />
          <%= f.password_field :password, class: "form-control form-user-password", placeholder: "パスワードを入力してください", autocomplete: "password" %>
        </div>

        <div class="field mb-20">
          <%= f.label :password_confirmation, "確認のためもう一度入力してください" %><span style="color: red;">*</span><br />
          <%= f.password_field :password_confirmation, class: "form-control form-user-password", placeholder: "確認のためもう一度パスワードを入力してください", autocomplete: "password" %>
        </div>

        <div class="actions mt-40 text-center">
          <%= f.submit "新規会員登録する", class: "btn btn-outline-success" %>
        </div>
      <% end %>

      <div class="mt-30 text-center">
        <p class="sns-relation-header under-line mb-30">
          <span><i class="far fa-arrow-alt-circle-down"></i></span>
          SNSと連携して新規登録する
          <span><i class="far fa-arrow-alt-circle-down"></i></span>
        </p>
        <div class="new-user-relation-btns">
          <%= link_to user_facebook_omniauth_authorize_path, method: :post do %>
            <div class="btn btn-outline-primary"><i class="fab fa-facebook"></i>Facebookで登録</div>
          <% end %>
          <%= link_to user_twitter_omniauth_authorize_path, method: :post do %>
            <div class="btn btn-outline-secondary"><i class="fab fa-twitter"></i>Twitterで登録</div>
          <% end %>
          <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post do %>
            <div class="btn btn-outline-success"><i class="fab fa-google"></i>Googleで登録</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <!-- 新規登録の入力方法の説明 画面サイズ 758px で非表示 -->
  <%= render "devise/shared/explanation_of_input_method" %>
</div>
