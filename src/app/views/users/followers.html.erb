<h2>フォローしてくれたユーザー一覧</h2>
<div class="content-width mb-50">
  <% @users.each do |user| %>
    <div class="card mb-20">
      <div class="card-body">
        <h5 class="card-title"><%= link_to user.name, user_path(user.id) %></h5>
        <p class="card-text article-font">
        <% if current_user != user %>
          <% if user.followed_by?(current_user) %>
            <p><%=link_to "フォローを解除", user_relationships_path(user.id), method: :delete %></p>
          <% else %>
            <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
          <% end %>
        <% end %>
        </p>
      </div>
    </div>
  <% end %>
</div>
