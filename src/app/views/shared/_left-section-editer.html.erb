<div class="left-section-editer" style="background-color: initial;">
  <ul class="text-center">
    <% if post.user == current_user %>
      <li style="padding-left: 6px;">
        <%= link_to "/#{move_from}s/#{post[:id]}/edit" do %>
          <div class="tooltip2">
            <i class="far fa-edit left-section-editer-icon tooltip2"></i>
            <div class="description2">編集する</div>
          </div>
        <% end %>
      </li>
      <li>
        <%= link_to "/#{move_from}s/#{post[:id]}", data: { confirm: "記事を削除すると戻すことは出来ません。本当に削除しますか？" }, method: :delete do %>
          <div class="tooltip2">
            <i class="far fa-trash-alt left-section-editer-icon tooltip2"></i>
            <div class="description2">削除する</div>
          </div>
        <% end %>
      </li>
    <% end %>
    <li>
      <%= link_to "/#{move_from}s" do %>
        <div class="tooltip2">
          <i class="far fa-list-alt left-section-editer-icon"></i>
          <div class="description2">一覧へ戻る</div>
        </div>
      <% end %>
    </li>
    <!-- favorite-btn -->
    <% if move_from == "article" && user_signed_in? && post.user_id != current_user.id %>
      <!-- 画面サイズ 830px 以上で表示するお気に入りアイコン（Ajax） -->
      <div class="favorite-btn-pc">
        <li>
          <div id="favorite_buttons_<%= post.id %>" class="tooltip2 left-section-editer-icon left-section-editer-favorite-icon">
            <%= render 'favorites/favorite', article: post %>
            <div class="description2">お気に入り</div>
          </div>
        </li>
      </div>
      <!-- 画面サイズ 830px 以下で表示するお気に入りアイコン -->
      <div class="favorite-btn-sp left-section-editer-icon left-section-editer-favorite-icon">
        <%= render 'favorites/non_ajax_favorite', article: post %>
      </div>
    <% end %>
  </ul>
</div>
